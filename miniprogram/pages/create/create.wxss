/* miniprogram/pages/create/create.wxss */
.create{
  height: 100vh;
  background-position: center bottom;
  background-repeat: no-repeat;
  background-size: 100% auto;
}
.create_body{
  padding: 0 40rpx;
  box-sizing: border-box;
}
.create_body_top{
  display: flex;
  justify-content: flex-end;
  padding: 10px 15rpx 0;
  height: 40px;
  box-sizing: border-box;
}
.create_body_top_button{
  margin-right: 5px;
  font-size: 12px;
  line-height: 20px;
}
.edit_title{
  margin-top: 30rpx;
  padding: 0 50rpx;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.edit_title_input{
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #dddddd;
  /* border-radius: 10rpx; */
  box-sizing: border-box;
}
.edit_content_prattle{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  color: #ffffff;
  text-align: center;
  border-radius: 10rpx;
  background-color: #accbcc;
}
.edit_content{
  margin-top: 50rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  text-align: left;
  white-space: pre-line;
}
.edit_content_el{
  margin-top: 20rpx;
  width: 100%;
  border-bottom: 1px solid #dddddd;
  /* border-radius: 10rpx; */
  padding: 0 20rpx;
  box-sizing: border-box;
}

.edit_author{
  display: flex;
  justify-content: flex-end;
  margin-top: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.edit_author_symbol{
  float: right;
  font-size: 40rpx;
}
.edit_author_input{
  float: right;
  margin-left: 10rpx;
  width:10em;
  font-size: 28rpx;
  border-bottom: 1px solid #dddddd;
  /* border-radius: 10rpx; */
  padding: 0 20rpx;
  box-sizing: border-box;
}

.edit_question{
  position: relative;
  margin: 10% auto;
  padding: 30rpx 60rpx;
  width: 90%;
  box-sizing: border-box;
  background-color: rgba(250, 41, 41, 0.5);
  color: #ffffff;
  text-align: center;
  border-radius: 20rpx;
  overflow: hidden;
}
.edit_question_textarea{
  width: 100%;
  height: 100rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #dddddd;
  /* border: 1px solid #dddddd; */
  /* border-radius: 10rpx; */
}
.question_buttons{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
  font-size: 36rpx;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
}
.question_button_accept{
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 33rpx;
  background-color: #0cbcc2;
}
.question_button_refuse{
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 33rpx;
  background-color: #accbcc;
}

.footer{
  margin-top: 30rpx;
}
.cerateButton{
  margin: 0 auto;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  color: #ffffff;
  text-align: center;
  border-radius: 10rpx;
  background-color: #0cbcc2;
}