/* miniprogram/pages/me/me.wxss */
.me{
  min-height: 100vh;
  background: #ffffff url(https://6973-issue-c29395-1257603811.tcb.qcloud.la/kbb_img/background_icon.png?sign=57bcd46f967f647d815dc1f8a226d2c9&t=1600358818) no-repeat right bottom;
}
.head{
  height: 200px;
  border-bottom: 1px solid #dddddd;
  background: #f7da98 url(https://6973-issue-c29395-1257603811.tcb.qcloud.la/kbb_img/all_background.png?sign=e855f97f5e46910a5f0f620a1ed226ad&t=1600441349) repeat center bottom;
  background-size: auto 200px;
  overflow: hidden;
}
.head_box{
  height: 200px;
  border-bottom: 1px solid #dddddd;
  background: url(https://6973-issue-c29395-1257603811.tcb.qcloud.la/kbb_img/me_head.png?sign=e7c9ac69a330100a269540f4364074be&t=1600441272) no-repeat center bottom;
  background-size: auto 200px;
  overflow: hidden;
}
.head_user{
  overflow: hidden;
}
.head_img{
  display: block;
  margin: 6px auto;
  width: 80px;
  height: 80px;
  border-radius: 100%;
  overflow: hidden;
}
.head_nickName{
  margin-top: 32px;
  line-height: 30px;
  text-align: center;
  color: #000000;
  background: rgba(255,255,255,0.3);
}
.body{
  position: absolute;
  top: 150px;
  width: 100vw;
  /* background: url(https://6973-issue-c29395-1257603811.tcb.qcloud.la/kbb_img/all_background.png); */
}
.body_img{
  display: block;
  margin: 0 auto;
  width: 100%;
  max-width: 300px;
}
.title_bar{
  line-height: 80rpx;
  font-size: 34rpx;
  text-align: center;
  background-color: #eeeeee;
  border-bottom: 1px solid #dddddd;
}
.list{
  position: absolute;
  top: 35px;
  width: 100%;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}
.list_item{
  margin: 0 auto;
  width: 70%;
  max-width: 210px;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}
.list_item_title{
  margin-top: 20px;
  line-height: 40px;
  font-size: 14px;
  text-align: left;
  border-bottom: 1px solid #dddddd;
}
.list_item_title::after{
  content: ":";
}
.list_item_content {
  font-size: 12px;
  line-height: 20px;
  max-height: 100rpx;
  text-indent: 2em;
  overflow: hidden;
}

.create{
  /* margin: 100px auto; */
  position: absolute;
  top: 100px;
  left: calc(50vw - 40px);
  width: 80px;
  line-height: 28px;
  font-size: 12px;
  color: #ffffff;
  text-align: center;
  background-color: #0cbcc2;
  cursor: pointer;
  z-index: 900;
}
.open{
  position: absolute;
  top: 150px;
  left: calc(50vw - 40px);
  width: 80px;
  line-height: 28px;
  font-size: 12px;
  color: #ffffff;
  text-align: center;
  background-color: #0cbcc2;
  cursor: pointer;
  z-index: 900;
}
.delete{
  position: absolute;
  top: 190px;
  left: calc(50vw - 40px);
  width: 80px;
  line-height: 28px;
  font-size: 12px;
  color: #ffffff;
  text-align: center;
  background-color: #696969;
  cursor: pointer;
  z-index: 900;
}